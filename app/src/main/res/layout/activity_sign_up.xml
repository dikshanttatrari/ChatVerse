<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    tools:context=".SignUpActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:layout_marginRight="32dp"
        android:layout_marginLeft="32dp"
        android:id="@+id/rlayout1"
        android:backgroundTint="@color/brown"
        android:background="@drawable/layout_background"
        android:elevation="3dp">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/chatverse_logo"
            android:id="@+id/signuplogo"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome to ChatVerse!"
            android:id="@+id/textview1"
            android:layout_below="@id/signuplogo"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/sf"
            android:textSize="26sp"
            android:textColor="@color/white"
            android:textStyle="bold"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="3dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:layout_below="@id/textview1"
            android:layout_marginRight="16dp"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:background="@drawable/layout_background">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1. Terms and Conditions"
                android:layout_centerHorizontal="true"
                android:textStyle="bold"
                android:textColor="@color/brown"
                android:fontFamily="@font/sf"
                android:textSize="24sp"
                android:id="@+id/textview2"
                android:layout_marginTop="32dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/terms_and_conditions"
                android:text="Tap ''Agree and Continue'' to accept our Terms &amp; Condition and Privacy Policy."
                android:textAlignment="center"
                android:layout_below="@id/textview2"
                android:layout_marginTop="16dp"
                android:layout_marginStart="64dp"
                android:layout_marginEnd="64dp"
                android:fontFamily="@font/sf"
                android:textColor="@color/black"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/terms_and_conditions"
                android:layout_marginTop="64dp"
                android:layout_marginEnd="38dp"
                android:layout_marginStart="38dp"
                android:backgroundTint="@color/red"
                android:background="@drawable/layout_background"
                android:text="Agree and Continue"
                android:id="@+id/agree_and_continue"
                android:textColor="@color/white"
                android:fontFamily="@font/sf"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginBottom="32dp"/>

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>